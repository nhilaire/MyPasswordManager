<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudForm>
                    <MudTextField T="string" Label="Category" @bind-Value=SecretViewModel.Category />
                    <MudTextField T="string" Label="Title" @bind-Value=SecretViewModel.Title />
                    <MudTextField T="string" Label="Login" @bind-Value=SecretViewModel.Login />
                    <MudGrid>
                        <MudItem xs="10">
                            <MudTextField T="string" Label="Password" @bind-Value=SecretViewModel.Password />
                        </MudItem>
                        <MudItem xs="2">
                            <MudTooltip Text="Generate password">
                                <MudIconButton Icon="@Icons.Material.Filled.Password" aria-label="Generate" OnClick="OnGeneratePassword"></MudIconButton>
                            </MudTooltip>
                        </MudItem>
                    </MudGrid>
                    <MudTextField T="string" Label="Notes" @bind-Value=SecretViewModel.Notes />
                    <MudTextField T="string" Label="Url" @bind-Value=SecretViewModel.Url />
                </MudForm>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>